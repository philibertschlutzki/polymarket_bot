# Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub Personal Access Token (for auto-push)
# GITHUB_PAT=your_github_pat_here

# Database Configuration (Optional - defaults to SQLite)
# Leave commented out to use SQLite (default)
# DATABASE_URL=postgresql://user:password@localhost:5432/polymarket

# Continuous Processing Configuration (New in v2.0)
# Gemini API Rate Limiting (Free Tier is 15 RPM, we target 4 for safety)
GEMINI_RPM_INITIAL=4.0
GEMINI_RPM_MIN=1.0
GEMINI_RPM_MAX=4.0

# Market Discovery & Queue
MARKET_FETCH_INTERVAL_MINUTES=5
QUEUE_SIZE_LIMIT=100

# Health Monitoring
HEALTH_CHECK_INTERVAL_SECONDS=60
HEALTH_DASHBOARD_UPDATE_MINUTES=15
MEMORY_WARNING_MB=400
MEMORY_CRITICAL_MB=480

# Trading Configuration
TOTAL_CAPITAL=1000
MIN_VOLUME=10000
MIN_PRICE=0.05
MAX_PRICE=0.95
HIGH_VOLUME_THRESHOLD=50000
FETCH_MARKET_LIMIT=100

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
